{
  "name": "@divenerd/monorepo-wrapper",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "yarn workspace @divenerd/app",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "markdown:generate-toc": "markdown-toc -i",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "markdown-toc": "^1.2.0",
    "standard": "^17.0.0"
  },
  "lint-staged": {
    "./README.md": [
      "yarn markdown:generate-toc"
    ],
    "*.js": [
      "yarn lint:fix"
    ]
  },
  "standard": {
    "env": [
      "jest",
      "browser"
    ]
  }
}
