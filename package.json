{
  "name": "@divenerd/monorepo-wrapper",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "test": "turbo run test",
    "chromatic": "turbo run chromatic",
    "api": "yarn workspace @divenerd/api",
    "web": "yarn workspace @divenerd/web",
    "dive-physics": "yarn workspace @divenerd/dive-physics",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "markdown:generate-toc": "markdown-toc -i",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": ">=10",
    "markdown-toc": "^1.2.0",
    "standard": "^17.0.0",
    "turbo": "^1.6.2"
  },
  "lint-staged": {
    "./README.md": [
      "yarn markdown:generate-toc"
    ],
    "*.{js, jsx}": [
      "yarn lint:fix"
    ]
  },
  "standard": {
    "env": [
      "jest",
      "browser"
    ]
  },
  "volta": {
    "node": "18.12.0",
    "yarn": "1.22.19"
  },
  "packageManager": "yarn@3.2.4"
}
